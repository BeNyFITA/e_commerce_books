<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/login.css">
</head>
<body>

    <%- include('./partials/nav') %>  

    <main class="container">
        <div class="title-login"><h1>LOGIN</h1></div>

        <% if (typeof errors !== 'undefined') { %>
            <p class="text-danger">* <%= errors.email.msg  %> </p>
            <% } %>

        <form action="/user/login" method="POST">

            <section class="input-fields">
            <div class="div-input-email">
            <label for="email">Seu e-mail:</label>
            <input type="email", id="email", name="email", placeholder="contact@email.com">
            </div>

            <div class="div-input-password">
                <label for="password">Sua senha:</label>
                <input type="password", id="password", name="senha", placeholder="1234">
            </div>
            </section>

            <section class="login-fields">
            <div class="div-checkbox-keepLogin">
                <input type="checkbox", id="keepLogin", name="keepLogin">
                <label for="keepLogin">Manter-me Logado</label>
            </div>

            <div class="div-submit">
                <button type="submit">Logar</button>
            </div>
            </section>

            <div class="div-register">
                <h3>Ainda n√£o tem conta?</h3>
                <button type="button" class="btn-register" onclick="location.href='/cadastro/criar'">Cadastre-se</button>
            </div>
        </form>




    </main>
    
</body>
</html>